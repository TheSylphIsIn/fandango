movement IntroScene_Movement_AmeliaSnooze
{
	delay_16 * 3
	face_up
	delay_16 * 3
	face_down
	delay_16 * 3
	face_up
	delay_16 * 3
	face_down
	delay_16 * 3
	face_up
	delay_16 * 3
	face_down
	delay_16 * 3
	face_up
	delay_16 * 3
	face_down
}

movement IntroScene_Movement_BradleyInvestigate
{
	walk_slow_down
	delay_16 * 2
	face_right
	delay_16 * 3
	face_left
	delay_16 * 3
	walk_slow_left
	delay_16 * 2
	face_down
	delay_16 * 5
	face_right
}

